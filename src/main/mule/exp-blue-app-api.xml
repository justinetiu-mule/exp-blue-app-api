		<logger level="INFO" doc:name="End of Retrieve Sales Details Flow" doc:id="a14625bd-dec2-4052-8fdd-425139938d9c" message='#[output application/json&#10;---&#10;{&#10;	message: "End of Retrieve Sales Details Flow",&#10;	correlationId: vars.correlationId,&#10;	appName: vars.appName,&#10;	data: {&#10;		transactionId: vars.transactionId&#10;	}&#10;}]' />
    </flow>
    <flow name="post:\sales:application\json:exp-blue-app-api-config">
		<ee:transform doc:name="Set transactionId and requestPayload Variables" doc:id="45434414-6fab-444e-b9fe-5ebafd5cee49" >
			<ee:message />
			<ee:variables >
				<ee:set-variable variableName="requestPayload" ><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-variable>
				<ee:set-variable variableName="transactionId" ><![CDATA[%dw 2.0
output application/java
---
