    <flow name="get:\sales\(transactionId):exp-blue-app-api-config">
		<ee:transform doc:name="Set transactionId Variable" doc:id="09c15646-2799-4a22-826f-911afdf59bd1" >
			<ee:variables >
				<ee:set-variable variableName="transactionId" ><![CDATA[%dw 2.0
output application/java
---
attributes.uriParams.transactionId]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<logger level="INFO" doc:name="Start of Retrieve Sales Details Flow" doc:id="1c55ac57-f462-4eb9-be95-0395b05d6fad" message='#[output application/json&#10;---&#10;{&#10;	message: "Start of Retrieve Sales Details Flow",&#10;	correlationId: vars.correlationId,&#10;	appName: vars.appName,&#10;	data: {&#10;		transactionId: vars.transactionId&#10;	}&#10;}]' />
