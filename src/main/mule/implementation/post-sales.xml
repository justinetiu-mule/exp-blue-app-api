http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd">
	<sub-flow name="post-sales-sub-flow" doc:id="b413bcbc-a67b-4c96-94bf-687a83ac8f2f" >
		<ee:transform doc:name="Map Request Payload to Sales Creation Payload" doc:id="c97f5572-71d2-4363-a69f-65e7dd208602" >
			<ee:message />
			<ee:variables >
				<ee:set-variable resource="dataweave/salesCreationPayload.dwl" variableName="salesCreationPayload" />
			</ee:variables>
		</ee:transform>
		<logger level="INFO" doc:name="Before Create Sales HTTP Request" doc:id="d0ade8ee-8982-4c55-b00a-ca363581d7d9" message='#[output application/json&#10;---&#10;{&#10;	message: "Before Create Sales HTTP Request",&#10;	correlationId: vars.correlationId,&#10;	appName: vars.appName,&#10;	data: {&#10;		transactionId: vars.transactionId&#10;	}&#10;}]' />
		<http:request doc:name=" Create Sales HTTP Request" doc:id="ceb156d9-ff53-47c2-9634-916f079376f6" config-ref="Sales_Process_API_HTTP_Request_Config" method="POST" path="${prc-sales-api.http.path.createSales}" sendCorrelationId="ALWAYS" correlationId="#[vars.correlationId]" >
			<http:body ><![CDATA[#[vars.salesCreationPayload default {}]]]></http:body>
		</http:request>
		<logger level="INFO" doc:name="After Create Sales HTTP Request" doc:id="776aecc2-3494-4140-b67f-262140dc6d2c" message='#[output application/json&#10;---&#10;{&#10;	message: "Before Create Sales HTTP Request",&#10;	correlationId: vars.correlationId,&#10;	appName: vars.appName,&#10;	data: {&#10;		transactionId: vars.transactionId&#10;	}&#10;}]' />
		<ee:transform doc:name="Set JSON Response Payload" doc:id="a76212ad-383b-412a-b799-ccf325f2ef64">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</sub-flow>
</mule>
